{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://w3id.org/ieee/ieee-1752-schema/sound-unit-value.json",
    "title": "Unit of Sound and Value",
    "description": "This schema represents sound.",
    "type": "object",
    "allOf": [
        {
            "$ref": "unit-value-1.0.json"
        },
        {
            "properties": {
                "unit": {
                    "references": [
                        {
                            "description": "The unit of measure of the element.",
                            "url": "http://unitsofmeasure.org/ucum.html#para-46"
                        }
                    ],
                    "enum": [
                        "dB",
                        "dBA"
                    ]
                }
            }
        }
    ]
}
